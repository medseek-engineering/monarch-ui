{
  "name": "monarch-ui",
  "version": "1.0.0",
  "description": "Angular directive & styles",
  "main": "./app.js",
  "private": false,
  "scripts": {
    "build": "rimraf dist && webpack --bail --progress --profile",
    "server": "webpack-dev-server --history-api-fallback --inline --progress",
    "test": "karma start",
    "test-watch": "karma start --auto-watch --no-single-run",
    "start": "npm run server"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/medseek-engineering/monarch-ui.git"
  },
  "author": "Influence Health, Inc.",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/medseek-engineering/monarch-ui/issues"
  },
  "dependencies": {
    "angular": "^1.6.1",
    "angular-foundation-6": "^0.10.25",
    "angular-translate": "^2.13.1",
    "angular-ui-bootstrap": "0.12.1",
    "angular-ui-router": "^1.0.0-rc.1"
  },
  "devDependencies": {
    "angular-mocks": "^1.6.1",
    "autoprefixer": "^6.0.3",
    "babel-core": "^6.2.1",
    "babel-loader": "^6.2.0",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-preset-es2015": "^6.1.18",
    "browser-sync": "^2.18.7",
    "browser-sync-webpack-plugin": "^1.1.4",
    "copy-webpack-plugin": "4.0.1",
    "css-loader": "0.14.0",
    "express": "^4.14.1",
    "extract-text-webpack-plugin": "2.0.0-beta.5",
    "file-loader": "^0.9.0",
    "foundation-sites-loader": "^1.0.1",
    "html-webpack-plugin": "^2.7.1",
    "istanbul-instrumenter-loader": "^1.0.0",
    "jasmine-core": "^2.3.4",
    "karma": "^1.1.0",
    "karma-coverage": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.26",
    "karma-webpack": "2.0.1",
    "ng-annotate": "^1.2.1",
    "ng-annotate-loader": "^0.2.0",
    "ngtemplate-loader": "^1.3.1",
    "node-libs-browser": "2.0.0",
    "node-sass": "^4.4.0",
    "null-loader": "^0.1.1",
    "phantomjs-prebuilt": "^2.1.4",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.5.1",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.0",
    "webpack-dev-server": "2.2.0"
  },
  "buildSettings": {
    "base": "./app/",
    "styleModules": [
      "iui-general"
    ],
    "createTemplates": {
      "moduleName": "monarch.ui",
      "prefix": "/$monarch-ui/",
      "templateFile": "templates.js"
    },
    "combineFiles": {
      "ignore": "!./lib/src/**/*.test.js"
    },
    "compass": {
      "sass": "lib/src",
      "css": "lib/dist",
      "require": []
    },
    "appFiles": {
      "styles": [
        "./lib/src/**/*.scss",
        "./lib/src/*.scss"
      ],
      "htmlFiles": [
        "./lib/src/**/*.html",
        "./lib/src/**/*.js"
      ],
      "jsFiles": [
        "./lib/src/**/*.js",
        "./lib/src/*.js"
      ],
      "templateFiles": [
        "./lib/src/**/*.html"
      ]
    },
    "destination": {
      "css": "./lib/dist",
      "js": "./lib/dist",
      "jsFile": "iui-module.js",
      "jsFileMin": "iui-module.min.js"
    }
  }
}
